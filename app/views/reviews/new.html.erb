<h3 style="text-align: center; padding: 10px 0">Enter a review for the restaurant : <%= @restaurant.name  %> </h3>

<div style="padding: 50px 0;"class="container">
  <div class="row">
    <div class="col-xs-12 col-md-offset-3 col-md-6">

      <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :content, placeholder: "Enter your review here" %>
      <%= f.input :rating %> 
      <%= f.submit "post review", class: "btn btn-primary" %>
      <% end  %>
    </div>
  </div>
</div>
